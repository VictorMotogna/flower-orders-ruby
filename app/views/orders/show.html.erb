<% content_for :page_title, @order.date %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <p class="level-item">
          <strong>
            Actions
          </strong>
        </p>
      </div>
      <!-- Right side -->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_order_path(@order), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", order_path(@order), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
        </p>
      </div>
    </nav>
    <hr />
    <div class="content">
      <div class="content">
        <%= @order.person %> @ <%= @order.date %>
      </div>
    </div>
  </div>
</section>